{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/lib"],
  "exclude": ["**/*.test.ts"]
}
